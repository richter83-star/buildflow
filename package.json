  "scripts": {
    "build": "react-router build",
    "dev": "dotenv -e .env -- react-router dev --port 3000",
    "prod": "npm run build && react-router-serve ./build/server/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "start": "react-router-serve ./build/server/index.js",
